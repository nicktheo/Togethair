<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <flow-definition id="search">
        <start-node>results</start-node>

        <view id="results">
            <vdl-document>/search/results.xhtml</vdl-document>
        </view>

        <view id="details">
            <vdl-document>/search/details.xhtml</vdl-document>
        </view>

        <view id="login">
            <vdl-document>/login.xhtml</vdl-document>
        </view>

        <flow-return id="exit">
            <from-outcome>/index.xhtml</from-outcome>
        </flow-return>

        <flow-call id="checkout">
            <flow-reference>
                <flow-id>booking</flow-id>
            </flow-reference>
            <outbound-parameter>
                <name>passengerCount</name>
                <value>#{bookingDetails.passengerCount}</value>
            </outbound-parameter>
            <outbound-parameter>
                <name>flights</name>
                <value>#{bookingDetails.flights}</value>
            </outbound-parameter>
        </flow-call>
    </flow-definition>
</faces-config>