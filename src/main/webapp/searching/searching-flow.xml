<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <flow-definition id="searching">
        <start-node>search</start-node>

        <view id="search">
            <vdl-document>/searching/searching.xhtml</vdl-document>
        </view>

        <view id="list">
            <vdl-document>/searching/results.xhtml</vdl-document>
        </view>

        <flow-return id="exit">
            <from-outcome>/index.xhtml</from-outcome>
        </flow-return>

        <flow-call id="book">
            <flow-reference>
                <flow-id>booking</flow-id>
            </flow-reference>
        </flow-call>
    </flow-definition>
</faces-config>