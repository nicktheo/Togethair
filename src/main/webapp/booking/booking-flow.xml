<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <flow-definition id="booking">
        <start-node>loginCheck</start-node>

        <switch id="loginCheck">
            <case>
                <if>#{!userDetails.loggedIn}</if>
                <from-outcome>login</from-outcome>
            </case>
            <default-outcome>passengers</default-outcome>
        </switch>

        <view id="login">
            <vdl-document>/login.xhtml</vdl-document>
        </view>

        <view id="passengers">
            <vdl-document>/booking/passengers.xhtml</vdl-document>
        </view>

        <view id="pay">
            <vdl-document>/booking/payment.xhtml</vdl-document>
        </view>

        <view id="success">
            <vdl-document>/booking/success.xhtml</vdl-document>
        </view>

        <flow-return id="exit">
            <from-outcome>exit</from-outcome>
        </flow-return>

        <inbound-parameter>
            <name>passengerCount</name>
            <value>#{bookingDetails.passengerCount}</value>
        </inbound-parameter>

        <inbound-parameter>
            <name>flights</name>
            <value>#{bookingDetails.flights}</value>
        </inbound-parameter>

        <initializer>#{bookingController.checkout()}</initializer>
    </flow-definition>
</faces-config>