<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <persistence-unit name="TogethairPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <!--<jta-data-source>java:/rd/datasources/RealDolmenDataSource</jta-data-source>-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.realdolmen.togethair.domain.booking.Booking</class>
        <class>com.realdolmen.togethair.domain.booking.PersonalTicket</class>
        <class>com.realdolmen.togethair.domain.flight.TravelClass</class>
        <class>com.realdolmen.togethair.domain.flight.Trajectory</class>
        <class>com.realdolmen.togethair.domain.flight.Flight</class>
        <class>com.realdolmen.togethair.domain.flight.Seat</class>
        <class>com.realdolmen.togethair.domain.identity.User</class>
        <class>com.realdolmen.togethair.domain.identity.Customer</class>
        <class>com.realdolmen.togethair.domain.location.Airport</class>


        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <!--<property name="javax.persistence.sql-load-script-source" value="META-INF/data.sql"/>-->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/togethair"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
        </properties>
    </persistence-unit>

    <!--
        Automatic schema export has been deliberately disabled. When you wtogethairt to reload your dataschema, run a
        persistence unit test. Otherwise all your data will disappear whenever you restart Wildfly.
    -->

</persistence>